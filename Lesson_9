import random
class Durak: 
    def __init__(self,igrok):
        self.igrok = igrok
    
    def card(self):
        self.d = ['06','07','08','09','10','avalet','dama','korol','tuz']
        self.masty_p=list(map(lambda x: x+'_p', self.d))
        self.masty_k = list(map(lambda x: x+'_k',self.d))
        self.masty_ch = list(map(lambda x: x+'_ch',self.d))
        self.masty_b = list(map(lambda x: x+'_b',self.d))
        self.allCard= self.masty_k+ self.masty_p+ self.masty_ch+ self.masty_b
        random.shuffle(self.allCard) 
        return self.allCard 
            
    def gen(self):
        for i in Durak.card(self):
            yield i
        
    def playersCard(self):
        self.genCard = Durak.gen(self)
        self.igrokCard = []
        self.compCard = []
        while len(self.igrokCard)!=6 or len(self.compCard) != 6:            
            if len(self.igrokCard)!=6:
                self.igrokCard.append(next(self.genCard))
                if len(self.igrokCard)!=6:
                    self.compCard.append(next(self.genCard))
            elif len(self.compCard)!=6:
                self.compCard.append(next(self.genCard))
        return self.igrokCard, self.compCard 
     
 
                                                                                                                                                 
myIgrok= Durak('dima')
myIgrok.playersCard()
myIgrok.card()
cart=myIgrok.igrokCard
cartComp = myIgrok.compCard
print (cartComp )

print ('Ваши карты',cart)

def find(names, name): 
    count =[]
    for i in names :
        if i in cartComp:
            if i > name:
                count.append(i)
    if len(count) == 0:
        cartComp.append(name)
        cart.remove(name)
        print ('компьтер взял')
    else: print('Ход компьютера',count[0])
    
               
def hod(name):           
    cart_p = myIgrok.masty_p
    cart_k = myIgrok.masty_k 
    cart_ch = myIgrok.masty_ch
    cart_b = myIgrok.masty_b
    if name in cart:
        if '_p' in name:      
            find(cart_p, name )
        elif '_b' in name:
            find(cart_b, name)
        elif '_ch' in name:
            find(cart_ch, name)
        elif '_k' in name:
            find(cart_k, name )
    elif name not in cart:
        print ('no card')
hod(input('введите карту: '))



